---
// Static output: `Astro.request.headers` no está disponible en build.
// Usamos fallback a /es y, en el cliente, redirigimos según el idioma del navegador.
const fallbackLang = "es"
---

<meta http-equiv="refresh" content={`0; url=/${fallbackLang}`} />
<script is:inline>
  const lang = (navigator.language || "").toLowerCase();
  const target = lang.startsWith("pt") ? "pt" : lang.startsWith("en") ? "en" : "es";
  window.location.replace(`/${target}`);
</script>
