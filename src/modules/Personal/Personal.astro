---
const personalImageAlt = "Nico Piovano";
import Badge from "@/modules/Badge/Badge.astro";
import { Image } from "astro:assets";

const { t } = Astro.locals as any;
---

<div class="max-w-xl">
    <div class="flex gap-4 mb-4">
        <Image
            src="/NicoPhotoMini.png"
            alt={personalImageAlt}
            width={64}
            height={64}
            class="rounded-full shadow-lg size-16"
            loading="eager"
        />
        <a
            href="https://linkedin.com/in/nmpiovano"
            target="_blank"
            rel="noopener"
            class="flex items-center transitiondark:text-gray-300 md:justify-center md:hover:scale-105"
        >
            <Badge>{t.personal.badge}</Badge>
        </a>
    </div>
    <h1
        class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
    >
        Nicolás Piovano
    </h1>
    <div class="mt-6">
        <p class="text-2xl sm:text-3xl font-semibold leading-tight tracking-tight text-black/90 dark:text-white">
            {t.hero?.headline ?? t.personal?.title ?? "Construyo productos web que convierten."}
        </p>
        <p class="mt-4 text-base sm:text-lg leading-relaxed text-gray-700 dark:text-gray-300">
            {t.hero?.subheadline ?? t.personal?.subtitle ?? ""}
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
            <a
                href={t.hero?.ctaPrimaryHref ?? "mailto:nmpiovano@gmail.com"}
                class="inline-flex items-center justify-center rounded-xl bg-green-600 hover:bg-green-700 text-white font-medium px-5 py-3 transition-colors"
            >
                {t.hero?.ctaPrimary ?? "Contactar"}
            </a>
            <a
                href={t.hero?.ctaSecondaryHref ?? "#proyectos"}
                class="inline-flex items-center justify-center rounded-xl border border-black/10 dark:border-white/10 bg-white/60 dark:bg-slate-950/30 hover:bg-white/80 dark:hover:bg-slate-950/45 text-black/80 dark:text-white font-medium px-5 py-3 transition-colors"
            >
                {t.hero?.ctaSecondary ?? "Ver proyectos"}
            </a>
        </div>
    </div>
    <nav class="flex flex-wrap gap-4 mt-8">
        <!-- <SocialPill href="mailto:nmpiovano@gmail.com">
            <MailIcon class="size-4"/>
            Hablemos
        </SocialPill> -->

        <!-- <SocialPill href="https://linkedin.com/in/nmpiovano">
            <LinkedInIcon class="size-4"/>
            LinkedIn
        </SocialPill>

        <SocialPill href="/Nicolás_Piovano_Sr_Fullstack.pdf" download>
            <CvIcon class="size-4"/>
            Cv 2026
        </SocialPill> -->
    </nav>
</div>
