---
const personalImageAlt = "Nico Piovano";
import Badge from "@/modules/Badge/Badge.astro";
import { Image } from "astro:assets";

const { t } = Astro.locals as any;
const p = t.employment?.personal ?? t.personal;
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <Image
      src="/NicoPhotoMini.png"
      alt={personalImageAlt}
      width={64}
      height={64}
      class="rounded-full shadow-lg size-16"
      loading="eager"
    />
    <a
      href="https://linkedin.com/in/nmpiovano"
      target="_blank"
      rel="noopener"
      class="flex items-center md:justify-center md:hover:scale-105 transition"
    >
      <Badge>{p.badge}</Badge>
    </a>
  </div>

  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    Nicolás Piovano
  </h1>

  <div class="mt-6 text-xl">
    <p class="text-gray-700 dark:text-gray-300">{p.subtitle}</p>
    <div class="mt-1">
      <span style="font-size: 1.5rem;" class="text-green-800 dark:text-custom-green">
        {p.title}
      </span>
      <span class="dark:text-white text-gray-700">· Javascript & Laravel</span>
    </div>
  </div>
</div>

