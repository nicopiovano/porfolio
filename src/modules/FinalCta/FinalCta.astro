---
const { t } = Astro.locals as any;
const { content } = Astro.props as any;
const cta = content ?? t.finalCta ?? {};
const divs = cta.divs ?? [];
---

<section id="contacto" class="w-full">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      divs.map((div: any) => {
        return (
          <div class="rounded-3xl border border-black/10 dark:border-white/10 bg-white/70 dark:bg-slate-900/40 backdrop-blur p-6 md:p-10 shadow-sm">
            <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-black/90 dark:text-white">
              {div.title}
            </h2>
            <p class="mt-3 text-gray-700 dark:text-gray-300 max-w-3xl leading-relaxed">
              {div.text}
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
              <a
                href={div.primaryHref}
                class="inline-flex items-center justify-center rounded-xl bg-green-600 hover:bg-green-700 text-white font-medium px-5 py-3 transition-colors"
              >
                {div.primaryLabel}
              </a>
              {div.secondaryLabel && div.secondaryHref ? (
                <a
                  href={div.secondaryHref}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center rounded-xl border border-black/10 dark:border-white/10 bg-white/60 dark:bg-slate-950/30 hover:bg-white/80 dark:hover:bg-slate-950/45 text-black/80 dark:text-white font-medium px-5 py-3 transition-colors"
                >
                  {div.secondaryLabel}
                </a>
              ) : null}
            </div>
            {div.hint ? (
              <p class="mt-4 text-sm text-gray-600 dark:text-gray-400">
                {div.hint}
              </p>
            ) : null}
          </div>
        );
      })
    }
  </div>
</section>
